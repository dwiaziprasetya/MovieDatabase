<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_movies_cast"
    android:background="@color/background_theme"
    xmlns:tools="http://schemas.android.com/tools">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_item_photo"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:riv_corner_radius="10dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_movie_cast"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/dmsans_regular"
        android:maxLines="1"
        android:text="@string/movie_cast"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        card_view:layout_constraintEnd_toEndOf="@+id/img_item_photo"
        card_view:layout_constraintStart_toStartOf="@+id/img_item_photo"
        card_view:layout_constraintTop_toBottomOf="@+id/img_item_photo" />

    <TextView
        android:id="@+id/tv_movie_cast_character"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dmsans_regular"
        android:paddingBottom="5dp"
        android:text="@string/movie_cast_character"
        android:textColor="#ACACAC"
        android:maxLines="1"
        android:ellipsize="end"
        card_view:layout_constraintEnd_toEndOf="@+id/tv_movie_cast"
        card_view:layout_constraintStart_toStartOf="@+id/tv_movie_cast"
        card_view:layout_constraintTop_toBottomOf="@+id/tv_movie_cast"/>

</androidx.constraintlayout.widget.ConstraintLayout>